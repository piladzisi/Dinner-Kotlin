<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightPrimary"
    tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chinese"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/selectedFoodTxt" android:textSize="30sp"
            app:fontFamily="casual" android:typeface="sans" android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginBottom="280dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp" app:srcCompat="@drawable/dd_logo"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="What's for Dinner? "
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:id="@+id/button"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/Widget.AppCompat.Button.Borderless" android:background="@color/colorPrimaryDark"
            app:layout_constraintEnd_toEndOf="parent" android:textColor="@color/colorTextPrimary"
            android:typeface="sans" android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>